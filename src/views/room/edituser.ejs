<% extend("../mainuser.ejs") %>

  <style>
    .bs-example {
      margin: 20px;
    }
  </style>

  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Chỉnh sửa thông tin cán bộ</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Quản lý phòng ban</a></li>
            <li class="breadcrumb-item"><a href="#">Chỉnh sửa thông tin cán bộ</a></li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <section class="content">
    <div class="container-fluid">
      <div class="card card-danger edituserclass">
        <div class="card-header ">
          <h3 class="card-title">Thông Tin Cán Bộ</h3>
        </div>
        <div class="card-body">
          <form role="form" method="post" action="/postEditInforUserForAmin/?id=<%=userInfor.id%>">
            <div class="row mt-4">
              <div class="col ">
                <h3 class="card-title">Họ Và Tên</h3>
                <input type="text" class="form-control" id="namefiletext" placeholder="Nhập họ và tên" name="ho_ten"
                  value="<%= userInfor.ho_ten %>">
              </div>
              <div class="form-group col">
                <h3 class="card-title">Chức Vụ</h3>
                <select class="custom-select form-control-border" name="chuc_vu" id="chuc_vu">

                  <option>Văn Thư</option>
                  <option>Lãnh đạo phòng HC-TC</option>
                  <option>Chánh văn phòng</option>
                  <option>Lãnh đạo UBND-TP</option>
                  <option>Lãnh đạo VP UBND-TP</option>
                  <option>Trưởng phòng</option>
                  <option>Phó trưởng phòng</option>
                  <option>Chuyên viên</option>

                </select>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col mt-1">
                <h3 class="card-title">Ngày Sinh</h3>
                <input type="text" class="form-control" placeholder="Nhập ngày sinh" name="ngay_sinh"
                  value="<%= userInfor.ngay_sinh %>">
              </div>

              <div class="form-group col ">
                <h3 class="card-title">Gới Tính</h3>
                <select class="custom-select form-control-border" name="goi_tinh" id="goi_tinh">
                  <option>Nam</option>
                  <option>Nữ</option>
                </select>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col ">
                <h3 class="card-title">Email</h3>
                <input type="text" class="form-control" id="namefiletext" placeholder="Nhập Email" name="email"
                  value="<%= userInfor.email%>">
              </div>
              <div class="col">
                <h3 class="card-title">Mật khẩu</h3>
                <input type="text" class="form-control" placeholder="Nhập mật khẩu" name="password"
                  value="<%= userInfor.password %>">
              </div>

            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>