<% extend("../mainuser.ejs") %>



    <style>
        .bs-example {
            margin: 20px;
        }
    </style>

    <section class="content ">
        <div class="container-fluid ">
            <div class="card">
                <div class="card-header ">
                    <h3 class="card-title ">Nhập thông tin văn bản</h3>
                </div>
                <div class="card-body">
                    <form role="form" method="post" action="/timkiemvanbanpost">
                        <div class="row mt-3">
                            <div class="col">
                                <h3 class="card-title">Tên văn bản: </h3>
                                <input type="text" class="form-control" id="namefiletext" placeholder="Nhập tên văn bản"
                                    name="ten_vb">
                            </div>
                            <div class="col">
                                <h3 class="card-title">Người gửi đến:</h3>
                                <input type="text" class="form-control" placeholder="Nhập người gửi"
                                    name="nguoi_gui_den">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <h3 class="card-title">Nơi gửi đến:</h3>
                                <input type="text" class="form-control" placeholder="Nhập nơi gửi đến"
                                    name="noi_gui_den">
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <h3 class="card-title">Ngày gửi đến:</h3>
                                    <div class="input-group date" id="reservationdatetime" data-target-input="nearest">
                                        <input type="text" class="form-control datetimepicker-input"
                                            data-target="#reservationdatetime" name="thoi_gian_nhan" />
                                        <div class="input-group-append" data-target="#reservationdatetime"
                                            data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <h3 class="card-title">Mã cơ quan:</h3>
                                <input type="text" class="form-control" placeholder="Nhập nơi mã cơ quan"
                                    name="ma_co_quan">
                            </div>
                            <div class="col">
                                <h3 class="card-title">Số và kí hiệu:</h3>
                                <input type="text" class="form-control" placeholder="Nhập số và kí hiệu"
                                    name="so_ki_hieu">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary mt-3 searchButton">Tìm Kiếm</button>
                    </form>

                </div>

                <table id="example2" class="table table-bordered table-hover">

                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>TÊN VĂN BẢN</th>
                            <th>NGƯỜI GỬI ĐẾN</th>
                            <th>LOẠI VĂN BẢN</th>
                            <th>HÀNH ĐỘNG</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% if(vanBanChoPheDuyet.length!=0){ var i=1; vanBanChoPheDuyet.forEach(function(data){ %>
                            <tr>
                                <td>
                                    <%=i%>
                                </td>
                                <td>
                                    <%=data.ten_vb %>
                                </td>
                                <td>
                                    <%=data.nguoi_gui_den%>
                                </td>

                                <td>
                                    <%=data.name_category%>
                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-primary btn-sm"
                                        href="/vanbanden/vanbanchopheduyet/xemvanban?id=<%=data.id%>">
                                    Xem Văn Bản
                                    </a>

                                    <a class="btn btn-danger btn-sm delete-vbden" data-deletedata="<%= data.id %>"
                                        href="#">
                                        <i class="fas fa-trash">
                                        </i>
                                        Xóa Bỏ
                                    </a>

                                </td>
                            </tr>
                            <% i++; }) %>
                                <% } else{ %>
                                    <tr>

                                    </tr>
                                    <% } %>

                    </tbody>
                    </tbody>

                </table>

            </div>
        </div>
    </section>